# If not running interactively, don't do anything
[ -z "$PS1" ] && return

## Exports
# append to the history file, don't overwrite it
shopt -s histappend
# don't put duplicate lines or lines starting with space in the history.
HISTCONTROL=ignoreboth
HISTSIZE=1000
HISTFILESIZE=2000

SYSTEM_PATH=$PATH
unset PATH
PATH=$HOME/.local/bin
PATH=$PATH:$HOME/bin
PATH=$PATH:$HOME/scripts
PATH=$PATH:$HOME/.npm/bin
PATH=$PATH:$HOME/.zsh/bin
PATH=$PATH:$HOME/.cargo/bin
PATH=$PATH:$HOME/.local/share/pnpm
PATH=$PATH:$SYSTEM_PATH
export PATH

export GOPATH=$HOME/dev/go
export RIPGREP_CONFIG_PATH=$HOME/.ripgreprc

# Test through vim iterations in order of preference
if [[ -x "$(command -v nvim)" ]]; then
    export EDITOR=$(which nvim);
elif [[ -x "$(command -v vim)" ]]; then
    export EDITOR=$(which vim);
else
    export EDITOR=$(which vi);
fi

#export BROWSER=firefox

# less is more
export PAGER=less

# check the window size after each command and, if necessary,
# update the values of LINES and COLUMNS.
shopt -s checkwinsize

# If set, the pattern "**" used in a pathname expansion context will
# match all files and zero or more directories and subdirectories.
shopt -s globstar

# make less more friendly for non-text input files, see lesspipe(1)
[ -x /usr/bin/lesspipe ] && eval "$(SHELL=/bin/sh lesspipe)"

source ~/.bash_powerline

# enable color support of ls and also add handy aliases
if [ -x /usr/bin/dircolors ]; then
    test -r ~/.dircolors && eval "$(dircolors -b ~/.dircolors)" || eval "$(dircolors -b)"
    alias ls='ls --color=auto'
    alias dir='dir --color=auto'
    alias vdir='vdir --color=auto'
    alias grep='grep --color=auto'
    alias fgrep='fgrep --color=auto'
    alias egrep='egrep --color=auto'
fi

alias e='exit'
alias q='exit'
alias v='vim'
alias n='nvim'
alias g='git'
alias c='clear'
alias t='tmux'
alias ta='tmux attach'
alias tt='tmux attach -t'
alias tx='tmuxinator'
alias tls='tmux list-sessions'
alias mkp='makepkg --noconfirm -f'
alias pn='pnpm'
alias px='pnpm exec nx'

alias ..='cd ../'
alias ...='cd ../../'
alias ....='cd ../../../'
alias .....='cd ../../../../'
alias ......='cd ../../../../../'

# better defaults? 
alias ls='ls --color --group-directories-first'
alias l='ls -lhF'
alias ll='ls -AlhF'
alias la='ls -ahF'
alias df='df -h'
alias tl='tail -f'

# frequent/rc files
alias tmc="nvim ~/.tmux.conf"
alias vrc="vim ~/.vim/vimrc -c 'cd %:p:h'"
alias nrc="nvim ~/.config/nvim/init.vim -c 'cd %:p:h'"
alias nsc="nvim -c SnippetConfig"
alias nt="nvim -c NotesWithPad"

alias brc="nvim ~/.bashrc"
alias bup="source ~/.bashrc"

alias zrc="nvim ~/.zshrc"
alias za="nvim ~/.zsh/aliases"
alias zup="source ~/.zshrc"


function take() {
    mkdir $1
    cd $1
}

function zet() {
    nvim "+Zet $*"
}

# WSL-OPEN
if [[ $(uname -r) == *Microsoft ]]; then
    if [[ -z $BROWSER  ]]; then
        export BROWSER=wsl-open
    else
        export BROWSER=$BROWSER:wsl-open
    fi
fi

# bash completion
[[ -f /etc/bash_completion ]] && ! shopt -oq posix && . /etc/bash_completion

# FZF
[[ -f ~/.fzf.bash ]] && source ~/.fzf.bash
[[ -f ~/.fzf.colors ]] && source ~/.fzf.colors


# vim: ft=bash
